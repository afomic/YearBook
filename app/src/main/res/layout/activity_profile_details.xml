<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afomic.yearbook.ProfileDetailsActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            app:titleEnabled="false"
            android:layout_height="240dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imv_profile_image"
                android:layout_gravity="center"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                android:src="@drawable/image_placeholder"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:elevation="4dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseParallaxMultiplier="1.0"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/cardview_dark_background"
            app:tabTextColor="@color/cardview_dark_background"
            android:id="@+id/profile_tablayout"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/profile_details_viewpager"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:elevation="16dp"
        android:background="@color/colorWhite">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_chat_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/whatsapp"
                android:layout_margin="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Chat on Whatsapp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/dimen_8"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@color/dividerColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/gmail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Send Email"
                    android:padding="@dimen/dimen_8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@color/dividerColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_call_user"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/phone"
                android:layout_margin="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Call"
                    android:padding="@dimen/dimen_8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:id="@+id/fab_profile_details"
        android:background="@color/colorWhite"
        app:backgroundTint="@color/colorWhite"
        android:src="@drawable/ic_phone"
        app:fabSize="normal"
        android:layout_gravity="right|bottom"
        android:layout_height="wrap_content"/>


</android.support.design.widget.CoordinatorLayout>
